<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

  <meta name="author" content="Lisa Meyer, Michael Law, Trishnarjun Kunamalla">

  <title>LockD-Vault</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Corben:wght@700&family=Play:wght@400;700&family=Red+Hat+Mono:ital,wght@0,300;0,500;1,300;1,500&display=swap" rel="stylesheet">

  <!-- CSS -->
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/styles.css" type="text/css" />

  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/ced3b5fb1a.js" crossorigin="anonymous"></script>

  <!-- JS -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/passwords.js"></script>
</head>

<body>

  <%- include('partials/_header') %>

  <!-- START OF MAIN -->
  <main>
    <article class="header">
      <h2>The Vault</h2>
      <form method="GET" action="/new_password" >
        <button type="submit">Create New</button>
      </form>
      <!-- TODO AJAX request to filter page by category -->
      <form method="POST" action="/password">
        <p>Filter by Category</p>
        <select name="category" id="category" required>
          <option value="null"></option>
          <option value="social">Social</option>
          <option value="entertainment">Entertainment</option>
          <option value="productivity">Productivity</option>
          <option value="banking">Banking</option>
          <option value="health_wellness">Health & Wellness</option>
          <option value="misc">Miscellaneous</option>
        </select>
      </form>
    </article>


    <section id="password-container">
      <% for (let entry in passwords) { %>
        <article class="password-box">
          <section>
            <h3><i class="fa-solid fa-paper-plane"></i><%= passwords[entry].website %></h3>
            <h4><i class="fa-solid fa-user"></i><%= passwords[entry].username %></h4>
            <h4><i class="fa-solid fa-lock"></i><%= passwords[entry].password %><i class="fa-regular fa-clone"></i></h4>
            <% if (passwords[entry].category !== null) { %>
              <h4><i class="fa-solid fa-tag"></i><%= passwords[entry].category %></h4>
            <% } %>
          </section>
          <input type="button" value="Edit">
        </article>
      <% } %>
    </section>

  </main>
  <!-- END OF MAIN -->

  <!-- <h1> Password storage for the masses! ðŸ¥”</h1> -->
</body>

</html>
